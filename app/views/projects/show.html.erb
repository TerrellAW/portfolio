<main class="min-h-screen" style="--project-color: <%= @project.project_color %>;">
    <%# Navigation %>
    <div class="container">
        <a href="/" class="back-link">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="m12 19-7-7 7-7"/>
                <path d="M19 12H5"/>
            </svg>
            Back to Home
        </a>
    </div>

    <%# Header %>
    <header class="project-header">
        <div class="container">
            <h1 class="project-header-title" style="color: var(--project-color);">
                <%= @project.name %>
            </h1>
            <p class="project-header-subtitle">
                <%= @project.thumbnail_desc %>
            </p>
        </div>
    </header>

    <%# Project Showcase %>
    <section class="project-showcase-section">
        <div class="container">
            <%# Image 1 - Left aligned %>
            <div class="showcase-item showcase-item-left">
                <div class="showcase-card">
                    <div class="showcase-image-container">
                        <img src="<%= @project.img_1_path %>"
                             alt="<%= @project.img_1_desc %>"
                             class="showcase-image">
                    </div>
                    <h3 class="showcase-title" style="color: var(--project-color);">
                        <%= @project.img_1_desc %>
                    </h3>
                </div>
            </div>

            <%# Image 2 - Right aligned %>
            <div class="showcase-item showcase-item-right">
                <div class="showcase-card">
                    <div class="showcase-image-container">
                        <img src="<%= @project.img_2_path %>"
                             alt="<%= @project.img_2_desc %>"
                             class="showcase-image">
                    </div>
                    <h3 class="showcase-title" style="color: var(--project-color);">
                        <%= @project.img_2_desc %>
                    </h3>
                </div>
            </div>

            <%# Image 3 - Left aligned %>
            <div class="showcase-item showcase-item-left">
                <div class="showcase-card">
                    <div class="showcase-image-container">
                        <img src="<%= @project.img_3_path %>"
                             alt="<%= @project.img_3_desc %>"
                             class="showcase-image">
                    </div>
                    <h3 class="showcase-title" style="color: var(--project-color);">
                        <%= @project.img_3_desc %>
                    </h3>
                </div>
            </div>
        </div>
    </section>

    <%# Project Description %>
    <section class="project-description-section">
        <div class="container">
            <p class="project-description-text">
                <%= @project.desc %>
            </p>
        </div>
    </section>

    <%# Project Links %>
    <section class="project-links-section">
        <%# GitHub Link %>
        <% if @project.github_link %>
            <a
                href="<%= @project.github_link %>"
                target="_blank"
                rel="noopener noreferrer"
                class="button button-secondary"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    strokeWidth="2"
                    strokeLinecap="round"
                    strokeLinejoin="round"
                >
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                    <path d="M9 18c-4.51 2-5-2-7-2"></path>
                </svg>
                GitHub
            </a>
        <% end %>
        <%# Deployment/Release Link %>
        <% if @project.link %>
            <a
                href="<%= @project.link %>"
                target="_blank"
                rel="noopener noreferrer"
                class="button button-project"
            >
                Project Link
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    strokeWidth="2"
                    strokeLinecap="round"
                    strokeLinejoin="round"
                >
                    <path d="M5 12h14"></path>
                    <path d="m12 5 7 7-7 7"></path>
                </svg>
            </a>
        <% end %>
    </section>

    <%# Footer %>
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div className="copyright">Terrell Alexis-Wilson</div>
                <div class="social-links">
                    <%# Mastodon %>
                    <a href="https://mastodon.social/@mrbones909" class="social-link">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            strokeWidth="2"
                            strokeLinecap="round"
                            strokeLinejoin="round"
                        >
                            <path d="M21.327 8.566c0-4.339-2.843-5.61-2.843-5.61-1.433-.658-3.894-.935-6.451-.956h-.063c-2.557.021-5.016.298-6.45.956 0 0-2.843 1.272-2.843 5.61 0 .993-.019 2.181.012 3.441.103 4.243.778 8.425 4.701 9.463 1.809.479 3.362.579 4.612.51 2.268-.126 3.541-.809 3.541-.809l-.075-1.646s-1.621.511-3.441.449c-1.804-.062-3.707-.194-3.999-2.409a4.523 4.523 0 0 1-.04-.621s1.77.433 4.014.536c1.372.063 2.658-.08 3.965-.236 2.506-.299 4.688-1.843 4.962-3.254.434-2.223.398-5.424.398-5.424zm-3.353 5.59h-2.081V9.057c0-1.075-.452-1.62-1.357-1.62-1 0-1.501.647-1.501 1.927v2.791h-2.069V9.364c0-1.28-.501-1.927-1.501-1.927-.905 0-1.357.546-1.357 1.62v5.099H6.026V8.903c0-1.074.273-1.927.823-2.558.566-.631 1.307-.955 2.228-.955 1.065 0 1.872.409 2.405 1.228l.518.869.519-.869c.533-.819 1.34-1.228 2.405-1.228.92 0 1.662.324 2.228.955.549.631.822 1.484.822 2.558v5.253z"></path>
                        </svg>
                    </a>
                    <%# Github %>
                    <a href="https://github.com/TerrellAW" class="social-link">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            strokeWidth="2"
                            strokeLinecap="round"
                            strokeLinejoin="round"
                        >
                            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                            <path d="M9 18c-4.51 2-5-2-7-2"></path>
                        </svg>
                    </a>
                    <%# LinkedIn %>
                    <a href="https://www.linkedin.com/in/terrell-alexis-wilson/" class="social-link">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            strokeWidth="2"
                            strokeLinecap="round"
                            strokeLinejoin="round"
                        >
                            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                            <rect width="4" height="12" x="2" y="9"></rect>
                            <circle cx="4" cy="4" r="2"></circle>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </footer>
</main>
